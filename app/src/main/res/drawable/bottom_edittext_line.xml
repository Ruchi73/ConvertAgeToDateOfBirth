<?xml version="1.0" encoding="utf-8"?>

    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

        <item android:bottom="1dp"
            android:left="-2dp"
            android:right="-2dp"

            android:top="-2dp">
